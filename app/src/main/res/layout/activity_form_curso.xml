<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Curso" />

        <EditText
            android:id="@+id/edtLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Local" />

        <EditText
            android:id="@+id/edtDataInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de Início (AAAA-MM-DD)"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/edtDataFim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de Fim (AAAA-MM-DD)"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/edtPreco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Preço (€)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edtDuracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duração" />

        <EditText
            android:id="@+id/edtEdicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edição" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />
    </LinearLayout>
</ScrollView>
